{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
    <h3>Login:</h3>
        <form action="/usuario/login" method="post">
            <label for="email">Email: </label>
                <input type="text" name="email" class="form-control" required placeholder="exemplo@email.com...">
            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control" required placeholder="Digite sua senha">
            <button type="submit" class="btn btn-success mt-4">Entrar</button>
        </form>
    </div>
</div>